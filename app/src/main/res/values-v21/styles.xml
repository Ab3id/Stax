<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="HoverTheme.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<item name="android:windowActionBar">true</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:navigationBarColor">@color/colorPrimary</item>
	</style>

	<style name="StaxTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="android:windowActionBar">false</item>
		<item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
		<item name="materialCalendarFullscreenTheme">
			@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen
		</item>
		<item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar
		</item>

		<item name="android:buttonStyle">@style/StaxButton</item>
		<item name="buttonStyle">@style/StaxButton</item>
		<item name="android:windowBackground">@color/colorPrimaryDark</item>
		<item name="android:navigationBarColor">@color/colorPrimaryDark</item>
	</style>

	<style name="StaxButton" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:padding">13sp</item>
		<item name="android:radius">5dp</item>
		<item name="android:textColor">@color/offWhite</item>
		<item name="android:textSize">16sp</item>
		<item name="android:background">@drawable/button_bg</item>
		<item name="android:elevation">10dp</item>
		<item name="android:textAllCaps">false</item>
		<item name="textAllCaps">false</item>
	</style>

	<style name="StaxButtonColored" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
		<item name="android:padding">13sp</item>
		<item name="android:layout_marginEnd">13sp</item>
		<item name="android:radius">5dp</item>
		<item name="android:textColor">@color/colorPrimaryDark</item>
		<item name="android:backgroundTint">@color/colorAccent</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textAllCaps">false</item>
		<item name="textAllCaps">false</item>
		<item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayExtended</item>
	</style>

	<style name="StaxDialog" parent="Theme.MaterialComponents.Dialog.Alert">
		<item name="android:textColor">@color/offWhite</item>
		<item name="android:headerDividersEnabled">false</item>
		<item name="android:background">@color/cardViewColor</item>
		<item name="titleTextColor">@color/offWhite</item>
		<item name="android:buttonBarNegativeButtonStyle">@style/StaxDialogButtonNeg</item>
		<item name="android:buttonBarPositiveButtonStyle">@style/StaxDialogButtonPos</item>
		<item name="android:buttonStyle">@style/StaxButton</item>
		<item name="buttonStyle">@style/StaxButton</item>
	</style>

	<style name="StaxDialogButtonPos" parent="StaxButton">
		<item name="android:backgroundTint">@color/bright_red</item>
	</style>

	<style name="StaxDialogButtonNeg" parent="StaxButton">
		<item name="android:backgroundTint">@color/buttonColor</item>
	</style>
</resources>