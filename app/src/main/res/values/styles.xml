<resources>
	<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<item name="colorPrimary">@color/colorPrimaryStax</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDarkStax</item>
		<item name="colorAccent">@color/colorAccentStax</item>

		<item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
		<item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
		<item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
	</style>

	<style name="myHoverTheme" parent="@style/HoverTheme.Base" />

	<style name="HoverTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowActionBar">true</item>
		<item name="colorPrimary">@color/colorPrimaryStax</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDarkStax</item>
		<item name="colorAccent">@color/colorAccentStax</item>

		<item name="hover_primaryColor">@color/colorPrimaryDarkStax</item>
		<item name="hover_textColor">@color/colorWhite</item>
		<item name="hover_textColorTitle">@color/colorWhite</item>
		<item name="hover_pinEntryColor">@color/colorWhite</item>

		<item name="hover_pinTheme">@style/PinButtonThemeStax</item>
		<item name="hover_posTheme">@style/PosButtonThemeStax</item>
	</style>

	<style name="PinButtonThemeStax" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">@color/colorWhite</item>
		<item name="android:textSize">24sp</item>
		<item name="android:background">@color/colorPrimaryDarkStax</item>
		<item name="android:typeface">normal</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="PosButtonThemeStax" parent="Widget.AppCompat.Button.Colored">
		<item name="android:textColor">@color/colorWhite</item>
		<item name="background">@color/colorPrimaryStax</item>
		<item name="android:typeface">normal</item>
		<item name="android:textAllCaps">false</item>
	</style>
</resources>


