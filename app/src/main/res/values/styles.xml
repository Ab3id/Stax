<resources>

	<style name="StaxTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="android:windowActionBar">false</item>
		<item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
		<item name="materialCalendarFullscreenTheme">
			@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen
		</item>
		<item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar
		</item>

		<item name="android:textColor">@color/offWhite</item>
		<item name="android:buttonStyle">@style/StaxButton</item>
		<item name="buttonStyle">@style/StaxButton</item>
		<item name="android:windowBackground">@color/colorPrimaryDark</item>
		<item name="android:fitsSystemWindows">true</item>
	</style>

	<style name="StaxHoverTheme" parent="StaxTheme" />

	<style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<item name="android:paddingBottom">8dp</item>
	</style>

	<style name="SplashTheme" parent="StaxTheme">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowBackground">@drawable/splash_background</item>
	</style>

	<style name="StaxButton" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:padding">13sp</item>
		<item name="android:radius">5dp</item>
		<item name="android:textColor">@color/offWhite</item>
		<item name="android:textSize">16sp</item>
		<item name="android:background">@drawable/button_bg</item>
		<item name="elevation">5dp</item>
		<item name="android:textAllCaps">false</item>
		<item name="textAllCaps">false</item>
	</style>

	<style name="StaxButtonColored" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
		<item name="android:padding">13sp</item>
		<item name="android:radius">5dp</item>
		<item name="android:textColor">@color/colorPrimaryDark</item>
		<item name="backgroundTint">@color/colorAccent</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textAllCaps">false</item>
		<item name="textAllCaps">false</item>
		<item name="android:fontFamily">font-medium</item>
		<item name="fontFamily">font-medium</item>
		<item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayExtended</item>
	</style>

	<style name="ShapeAppearanceOverlayExtended" parent="">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">5dp</item>
	</style>

	<style name="StaxLabeledInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<item name="boxStrokeColor">@color/offWhite</item>
		<item name="boxBackgroundColor">@color/cardViewColor</item>
		<item name="boxStrokeWidth">2dp</item>
		<item name="android:textColorHint">@color/offWhite</item>
		<item name="hintTextColor">@color/offWhite</item>
		<item name="android:textColor">@color/offWhite</item>
		<item name="android:textSize">@dimen/text_16</item>
		<item name="errorTextColor">@color/bright_red</item>
		<item name="errorEnabled">true</item>
	</style>

	<style name="StaxLabeledDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
		<item name="boxStrokeColor">@color/offWhite</item>
		<item name="boxStrokeWidth">2dp</item>
		<item name="boxBackgroundColor">@color/cardViewColor</item>
		<item name="android:textColorHint">@color/offWhite</item>
		<item name="hintTextColor">@color/offWhite</item>
		<item name="android:textColor">@color/offWhite</item>
		<item name="android:textSize">@dimen/text_21</item>
		<item name="endIconTint">@color/offWhite</item>
		<item name="materialThemeOverlay">@style/StaxDropdownPopup</item>
	</style>

	<style name="StaxDropdownPopup" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<item name="colorSurface">@color/cardViewColor</item>
	</style>

	<style name="StaxDialog" parent="Theme.MaterialComponents.Dialog.Alert">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="android:textColor">@color/offWhite</item>
		<item name="android:headerDividersEnabled">false</item>
		<item name="android:background">@color/cardViewColor</item>
		<item name="titleTextColor">@color/offWhite</item>
		<item name="buttonBarNegativeButtonStyle">@style/StaxDialogButtonNeg</item>
		<item name="buttonBarPositiveButtonStyle">@style/StaxDialogButtonPos</item>
		<item name="android:buttonStyle">@style/StaxButton</item>
		<item name="buttonStyle">@style/StaxButton</item>
	</style>

	<style name="StaxDialogButtonPos" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
		<item name="backgroundTint">@color/bright_red</item>
		<item name="android:textColor">@color/offWhite</item>
	</style>

	<style name="StaxDialogButtonNeg" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
		<item name="backgroundTint">@color/buttonColor</item>
		<item name="android:textColor">@color/offWhite</item>
	</style>
</resources>


