<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginTop="@dimen/margin_13"
	tools:context=".requests.NewRequestFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/margin_89"
		android:orientation="vertical" >

		<include layout="@layout/request_card_summary"
			android:id="@+id/summaryCard" />

		<include layout="@layout/request_card_amount"
		    android:id="@+id/amountCard" />

		<include layout="@layout/request_card_recipients"
			android:id="@+id/recipientCard" />

		<include layout="@layout/request_card_receiving_account_info"
			android:id="@+id/receiving_account_infoCard"/>

		<include layout="@layout/transfer_card_note"
			android:id="@+id/noteCard" />

		<include layout="@layout/share_layout"
		    android:id="@+id/shareCard" />

		<include layout="@layout/transfer_card_future"
			android:id="@+id/futureCard"
			android:visibility="gone" />

		<include layout="@layout/transfer_card_repeat"
			android:id="@+id/repeatCard"
			android:visibility="gone" />

	</LinearLayout>
</androidx.core.widget.NestedScrollView>