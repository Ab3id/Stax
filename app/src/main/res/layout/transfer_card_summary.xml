<?xml version="1.0" encoding="utf-8"?>
<com.hover.stax.views.StaxCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:title="@string/fab_transfer"
	app:showBack="true">

	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/margin_3">

		<TableRow android:id="@+id/amountRow">

			<TextView
				android:text="@string/amount_cardhead"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_16" />

			<TextView android:id="@+id/amountValue"
				android:layout_weight="1"
				android:fontFamily="font-medium"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_21"
				android:textAlignment="viewEnd" />
		</TableRow>

		<TableRow android:id="@+id/fromRow" android:layout_marginTop="@dimen/margin_21">

			<TextView
				android:text="@string/acct_label"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_16" />

			<TextView android:id="@+id/fromValue"
				android:layout_weight="1"
				android:fontFamily="font-medium"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_21"
				android:textAlignment="viewEnd" />
		</TableRow>

		<TableRow android:id="@+id/toNetworkRow" android:layout_marginTop="@dimen/margin_21">

			<TextView
				android:text="@string/recipientnetwork_cardhead"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_16" />

			<TextView android:id="@+id/toNetworkValue"
				android:layout_weight="1"
				android:fontFamily="font-medium"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_21"
				android:textAlignment="viewEnd" />
		</TableRow>

		<TableRow android:id="@+id/recipientRow" android:layout_marginTop="@dimen/margin_21">

			<TextView
				android:text="@string/recipient_label"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_16" />

			<TextView android:id="@+id/recipientValue"
				android:layout_weight="1"
				android:fontFamily="font-medium"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_21"
				android:textAlignment="viewEnd" />
		</TableRow>

		<TableRow android:id="@+id/noteRow" android:layout_marginTop="@dimen/margin_21">

			<TextView
				android:text="@string/note_cardhead"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_16" />

			<TextView android:id="@+id/reasonValue"
				android:layout_weight="1"
				android:fontFamily="font-medium"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_21"
				android:textAlignment="viewEnd" />
		</TableRow>

		<TableRow android:id="@+id/dateRow" android:layout_marginTop="@dimen/margin_21">

			<TextView
				android:text="@string/date"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_16" />

			<TextView android:id="@+id/dateValue"
				android:layout_weight="1"
				android:fontFamily="font-medium"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_21"
				android:textAlignment="viewEnd" />
		</TableRow>

		<TableRow android:id="@+id/frequencyRow" android:layout_marginTop="@dimen/margin_21">

			<TextView
				android:text="@string/how_often"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_16" />

			<TextView android:id="@+id/frequencyValue"
				android:layout_weight="1"
				android:fontFamily="font-medium"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_21"
				android:textAlignment="viewEnd" />
		</TableRow>

		<TableRow android:id="@+id/endDateRow" android:layout_marginTop="@dimen/margin_21">

			<TextView
				android:text="@string/end_date"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_16" />

			<TextView android:id="@+id/endDateValue"
				android:layout_weight="1"
				android:fontFamily="font-medium"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_21"
				android:textAlignment="viewEnd" />
		</TableRow>

		<TableRow android:id="@+id/repeatTimesRow" android:layout_marginTop="@dimen/margin_21">

			<TextView
				android:text="@string/repeattimes_label"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_16" />

			<TextView android:id="@+id/repeatTimesValue"
				android:layout_weight="1"
				android:fontFamily="font-medium"
				android:textColor="@color/offWhite"
				android:textSize="@dimen/text_21"
				android:textAlignment="viewEnd" />
		</TableRow>
	</TableLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="gone"
		android:layout_marginTop="@dimen/margin_21">

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/edit_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/btn_edit"
			android:layout_alignParentEnd="true"
			style="@style/StaxButton"
			android:fontFamily="font-medium" />
	</RelativeLayout>
</com.hover.stax.views.StaxCardView>