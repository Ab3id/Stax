<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/recipientEntry"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<com.google.android.material.textfield.TextInputLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/recipientLabel"
		android:hint="@string/recipientphone_label"
		style="@style/StaxLabeledInput">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_13"
			android:paddingEnd="@dimen/margin_68"
			android:textSize="@dimen/text_21"
			android:textColor="@color/offWhite"
			android:textCursorDrawable="@null"
			android:inputType="number"
		    	android:fontFamily="font-normal"
			android:id="@+id/recipient_input"
			tools:ignore="RtlSymmetry" />
	</com.google.android.material.textfield.TextInputLayout>

	<ImageButton android:id="@+id/contact_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_21"
		android:layout_marginEnd="@dimen/margin_24"
		android:layout_alignParentEnd="true"
		app:srcCompat="@drawable/ic_contacts"
		android:background="@color/transparent"/>
</RelativeLayout>
