<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<androidx.cardview.widget.CardView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/margin_13"
		android:layout_marginTop="@dimen/margin_5"
		android:layout_marginBottom="@dimen/margin_21"
	    android:padding="1dp"
		app:cardElevation="10dp"
		app:cardCornerRadius="5dp"
		app:cardBackgroundColor="@color/cardViewColor">

		<LinearLayout android:id="@+id/content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_13"
			android:background="@color/cardViewColor"
			android:orientation="vertical" >

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_arrow_back"
				android:layout_gravity="start"
				android:gravity="start"
				android:id="@+id/backButton"
				android:visibility="gone"
				android:layout_marginEnd="@dimen/spacing32" />

			<TextView android:id="@+id/title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/balances"
				android:textSize="@dimen/text_13"
				android:textAllCaps="true"
				android:textAlignment="viewEnd"
				android:fontFamily="font-bold"
				android:layout_marginBottom="@dimen/margin_21"
				android:textColor="@color/offWhite" />

		</LinearLayout>
	</androidx.cardview.widget.CardView>
</FrameLayout>