<?xml version="1.0" encoding="utf-8"?>
<com.hover.stax.views.StaxCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:title="@string/to_this_number">

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/recipientEntry"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/recipient_phone"
		style="@style/StaxLabeledInput"
		android:visibility="gone">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_13"
			android:textSize="@dimen/text_21"
			android:textColor="@color/offWhite"
			android:textCursorDrawable="@null"
			android:inputType="number"
			android:id="@+id/recipient_number"/>

		<ImageButton android:id="@+id/contact_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/activity_vertical_margin"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:layout_marginTop="@dimen/spacing32"
			android:src="@drawable/ic_contacts"
			android:background="@color/transparent"/>
	</com.google.android.material.textfield.TextInputLayout>


</com.hover.stax.views.StaxCardView>