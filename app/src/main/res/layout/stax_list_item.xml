<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_16"
    android:paddingVertical="@dimen/margin_8"
    android:id="@+id/transaction_item_layout"
    android:orientation="vertical">

	<TextView
		android:id="@+id/trans_date"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/grey"
	    android:layout_marginTop="@dimen/margin_8"
	    android:layout_marginBottom="@dimen/margin_8"
	    android:textSize="@dimen/text_13"
	    android:fontFamily="font-normal"
		android:visibility="gone" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:background="?attr/selectableItemBackground"
	    android:orientation="horizontal">

		<TextView
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:paddingVertical="2dp"
		    android:textColor="@color/offWhite"
		    android:textSize="@dimen/text_16"
		    android:fontFamily="font-normal"
		    android:layout_marginEnd="@dimen/margin_13"
		    android:id="@+id/trans_content" />

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/trans_amount"
		    android:fontFamily="font-normal"
		    android:textColor="@color/white"
		    android:textSize="@dimen/text_21" />

	</LinearLayout>
	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/margin_16"
	    android:drawablePadding="@dimen/margin_16"
	    android:gravity="center_vertical"
	    android:fontFamily="font-normal"
	    android:textSize="@dimen/text_13"
	    android:visibility="gone"
	    android:layout_marginBottom="@dimen/margin_8"
	    android:id="@+id/pending_notify_in_list"
	    android:text="@string/transfer_sent_waiting_confirmation"
	    app:drawableStartCompat="@drawable/ic_baseline_warning_24" />
</LinearLayout>