<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".transfers.TransferFragment">

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >


	<androidx.cardview.widget.CardView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="1dp"
	    card_view:cardUseCompatPadding="true"
	    card_view:cardElevation="10dp"
	    card_view:cardPreventCornerOverlap="true"
	    card_view:cardCornerRadius="0dp">
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingVertical="@dimen/spacing8"
	    android:paddingHorizontal="@dimen/activity_vertical_margin"
	    android:background="@color/cardViewColor"
	    android:layout_gravity="center_vertical">

		<ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_arrow_back_offwhite_24dp"
		    android:layout_gravity="start|center"
		    android:gravity="start|center"
		    />

		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/transfer"
		    android:textSize="@dimen/text_13"
		    android:textAllCaps="true"
		    android:layout_gravity="end|center_vertical"
		    android:gravity="end|center_vertical"
		    android:fontFamily="font-bold"
		    android:layout_marginBottom="@dimen/activity_vertical_margin"
		    android:textColor="@color/offWhite" />

	</LinearLayout>
	</androidx.cardview.widget.CardView>



		<TextView android:id="@+id/transfer_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/offWhite"
		    android:textSize="@dimen/text_21"
		    android:textStyle="bold"
		    android:layout_gravity="start"
		    android:gravity="start"
		    android:layout_marginBottom="@dimen/spacing32"
			android:text="@string/title_p2p"/>



		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="@dimen/activity_vertical_margin"
		    >

			<androidx.appcompat.widget.AppCompatSpinner
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="@dimen/activity_vertical_margin"
			    android:background="@drawable/spinner_bg"
			    android:padding="1dp"
			    android:id="@+id/fromSpinner" />
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginStart="10dp"
			    android:layout_marginTop="7dp"
			    android:text="@string/from"
			    android:paddingHorizontal="@dimen/spacing8"
			    android:background="@color/colorPrimary"
			    android:textColor="@color/offWhite"
			    android:textSize="@dimen/text_16" />
		</RelativeLayout>






		<LinearLayout  android:id="@+id/details_block"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">



			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="@dimen/activity_vertical_margin"
			    >

				<androidx.appcompat.widget.AppCompatSpinner
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="@dimen/activity_vertical_margin"
				    android:padding="1dp"
				    android:background="@drawable/spinner_bg"
				    android:id="@+id/toSpinner" />
				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginStart="10dp"
				    android:layout_marginTop="7dp"
				    android:text="@string/to"
				    android:paddingHorizontal="@dimen/spacing8"
				    android:background="@color/colorPrimary"
				    android:textColor="@color/offWhite"
				    android:textSize="@dimen/text_16" />
			</RelativeLayout>



			<LinearLayout android:id="@+id/recipient_block"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:visibility="gone">



				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/activity_vertical_margin"
					android:orientation="horizontal">


					<RelativeLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_toStartOf="@+id/contact_button"
					    >

						<EditText android:id="@+id/recipient_number"
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:layout_alignParentLeft="true"
						    android:paddingLeft="@dimen/editText_box_margin_horiz"
						    android:paddingStart="@dimen/editText_box_margin_horiz"
						    android:paddingEnd="@dimen/editText_box_margin_horiz"
						    android:paddingRight="@dimen/editText_box_margin_horiz"
						    android:paddingTop="@dimen/activity_vertical_margin"
						    android:paddingBottom="@dimen/activity_vertical_margin"
						    android:textColorHint="@color/darkGrey"
						    android:maxLines="1"
						    android:inputType="phone"
						    android:layout_marginTop="@dimen/activity_vertical_margin"
						    android:textColor="@color/offWhite"
						    android:textSize="@dimen/text_21"
						    android:background="@drawable/edit_text_bg" />
						<TextView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_marginStart="10dp"
						    android:layout_marginTop="7dp"
						    android:id="@+id/recipient_label"
						    android:text="@string/recipient_phone"
						    android:paddingHorizontal="@dimen/spacing8"
						    android:background="@color/colorPrimary"
						    android:textColor="@color/offWhite"
						    android:textSize="@dimen/text_16" />
					</RelativeLayout>


					<ImageButton android:id="@+id/contact_button"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="25dp"
						android:layout_alignParentEnd="true"
						android:layout_centerVertical="true"
						android:src="@drawable/ic_contacts"
						android:background="@color/transparent"/>
				</RelativeLayout>
			</LinearLayout>



			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="@dimen/activity_vertical_margin"
			    android:layout_weight="1"
			    >

				<EditText android:id="@+id/amount_input"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:paddingLeft="@dimen/editText_box_margin_horiz"
				    android:paddingStart="@dimen/editText_box_margin_horiz"
				    android:paddingEnd="@dimen/editText_box_margin_horiz"
				    android:paddingRight="@dimen/editText_box_margin_horiz"
				    android:paddingTop="@dimen/activity_vertical_margin"
				    android:paddingBottom="@dimen/activity_vertical_margin"
				    android:textColorHint="@color/darkGrey"
				    android:layout_marginTop="@dimen/activity_vertical_margin"
				    android:maxLines="1"
				    android:textSize="@dimen/text_21"
				    android:autofillHints="email_hint"
				    android:inputType="number"
				    android:textColor="@color/offWhite"

				    android:background="@drawable/edit_text_bg" />
				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginStart="10dp"
				    android:layout_marginTop="7dp"
				    android:text="@string/amount"
				    android:paddingHorizontal="@dimen/spacing8"
				    android:background="@color/colorPrimary"
				    android:textColor="@color/offWhite"
				    android:textSize="@dimen/text_16" />
			</RelativeLayout>



			<Button android:id="@+id/confirm_button"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/continue_text"
			    android:background="@drawable/edit_text_bg"
			    android:textColor="@color/offWhite"
			    android:textAllCaps="false"
			    android:layout_marginTop="@dimen/spacing32"
			    android:layout_gravity="end"
			    android:paddingHorizontal="@dimen/activity_vertical_margin"/>
		</LinearLayout>

		<TextView android:id="@+id/error_message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/activity_vertical_margin"
			android:textAlignment="center"
			android:text="@string/no_p2p_action_error"
			android:textColor="@color/offWhite"
			android:textSize="@dimen/text_13"
			android:visibility="gone"/>

	</LinearLayout>
</androidx.core.widget.NestedScrollView>
