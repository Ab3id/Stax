<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:layout_marginTop="@dimen/margin_13"
    tools:context=".transfers.TransferFragment">

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/margin_89"
	    android:orientation="vertical" >

		<include layout="@layout/transfer_card_summary"
			android:id="@+id/summaryCard" />

		<include layout="@layout/transfer_card_amount"
			android:id="@+id/amountCard" />

		<include layout="@layout/transfer_card_from_channel"
			android:id="@+id/fromAccountCard" />

		<include layout="@layout/transfer_card_network"
			android:id="@+id/networkCard" />

		<include layout="@layout/transfer_card_recipient"
			android:id="@+id/recipientCard" />

		<include layout="@layout/transfer_card_note"
			android:id="@+id/reasonCard" />

		<include layout="@layout/transfer_card_future"
			android:id="@+id/futureCard" />

		<include layout="@layout/transfer_card_repeat"
			android:id="@+id/repeatCard"
			android:visibility="gone" />

	</LinearLayout>
</androidx.core.widget.NestedScrollView>
