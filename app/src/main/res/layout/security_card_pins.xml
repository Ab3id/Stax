<?xml version="1.0" encoding="utf-8"?>
<com.hover.stax.views.StaxCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:title="@string/security">

	<androidx.appcompat.widget.AppCompatButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/remove_pins"
		android:id="@+id/removePinsButtonId"
		style="@style/StaxButton"
		android:backgroundTint="@color/bright_red"
		android:fontFamily="font-medium" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/about_our_security"
		android:layout_marginTop="@dimen/margin_21"
		android:textColor="@color/offWhite"
		android:textSize="@dimen/text_16"
		android:fontFamily="font-medium" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/about_our_security_content"
		android:layout_marginTop="@dimen/margin_8"
		android:layout_marginBottom="@dimen/margin_13"
		android:fontFamily="font-regular"
		android:textSize="@dimen/text_16"
		android:lineSpacingExtra="4.5dp"
		android:textColor="@color/offWhite" />

</com.hover.stax.views.StaxCardView>